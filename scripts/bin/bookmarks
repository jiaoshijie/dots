#!/usr/bin/env bash

ifinstalled "jq" || exit


BookMarkPath="$HOME/media/GDrive/others/bookmarks.json"

if [[ -z "$DISPLAY" ]]; then
  ifinstalled "fzf" || exit
  MENU_CMD=fzf
  OUTPUT_CMD="cat"
else
  ifinstalled "dmenu" || exit
  MENU_CMD="dmenu -i -l 30"
  OUTPUT_CMD="xsel -ib"
fi

key=$(jq 'keys[]' < "$BookMarkPath" | $MENU_CMD)

test -z "$key" && exit

jq -r ".[$key]" < "$BookMarkPath" | $OUTPUT_CMD
