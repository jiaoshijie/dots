#!/usr/bin/env bash

ifinstalled fzf || exit 1

APPRUN_DIR=$HOME/media/AppRun

APP="$1"

if [[ -z "$APP" ]]; then
  APP=$(find "$APPRUN_DIR/" -type f -name '*.AppImage' -exec basename {} .AppImage \; | fzf)
fi

test -n "$APP" || exit 0

COMMAND="setsid -f $APPRUN_DIR/${APP}.AppImage"
$COMMAND &> /dev/null
